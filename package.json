{
  "name": "html-entities-converter",
  "displayName": "HTML Character Entity Converter",
  "description": "Converts HTML character entities to their corresponding characters.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "devDependencies": {
    "@types/vscode": "^1.66.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "typescript": "^4.5.5"
  },
  "publisher": "ziloen",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ziloen/html-entities-converter"
  },
  "activationEvents": [
    "onCommand:converter.encode",
    "onCommand:converter.decode"
  ],
  "main": "./dist/index",
  "contributes": {
    "commands": [
      {
        "command": "converter.encode",
        "title": "Convert characters to HTML entities"
      },
      {
        "command": "converter.decode",
        "title": "Convert HTML entities to characters"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "converter.encode",
          "when": "editorHasSelection"
        },
        {
          "command": "converter.decode",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "package": "pnpm vsce package --no-dependencies",
    "publish": "pnpm vsce publish --no-dependencies"
  }
}